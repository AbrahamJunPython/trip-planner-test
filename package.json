{
  "name": "trip-planner-mvp",
  "version": "1.0.0",
  "description": "旅行工程ジェネレーター（MVP） - 東京発・王道・複数人向けの旅行プランをAIが70%完成度で提案",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint app --ext .ts,.tsx",
    "lint:fix": "eslint app --ext .ts,.tsx --fix",
    "lint:a11y": "eslint --config .eslintrc.a11y.json \"app/**/*.{ts,tsx}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "lighthouse": "lhci autorun",
    "prepare": "husky install",
    "postcode:convert": "node scripts/kenall_to_postcodes.mjs",
    "station:convert": "node scripts/geojson_to_stations.mjs"
  },
  "dependencies": {
    "@sentry/nextjs": "^10.38.0",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@upstash/redis": "^1.36.2",
    "@vercel/kv": "^3.0.0",
    "cheerio": "^1.2.0",
    "date-fns": "^4.1.0",
    "iconv-lite": "^0.6.3",
    "next": "^16.1.6",
    "openai": "^6.21.0",
    "react": "18.3.1",
    "react-day-picker": "^9.13.1",
    "react-dom": "18.3.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@lhci/cli": "^0.14.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^20.11.30",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^5.1.4",
    "autoprefixer": "^10.4.24",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "husky": "^9.0.11",
    "jsdom": "^28.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.4.5",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
